<div class="container">
  <%= simple_form_for [@meal, @amount] do |f| %>
    <%= f.input :meal_id, as: :hidden, input_html: { value: @meal.id } %>
    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: Ingredient.order('name ASC') %>
    <%= f.button :submit %>
  <% end %>
</div>